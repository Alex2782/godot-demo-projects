[sub_resource type="GDScript" id="1"]
script/source = "extends Control


# Returns an array of all loaded locales of the project.
# Project -> Project Settings -> Localization
@onready var locales = TranslationServer.get_loaded_locales()


func _ready():
	for locale in locales:
		var locale_name = TranslationServer.get_locale_name(locale)
		var item = \"%s (%s)\" % [locale_name, locale]
		$LocaleOptionButton.add_item(item)


func _on_locale_option_button_item_selected(index):
	var locale = locales[index]
	TranslationServer.set_locale(locale)
"

